{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@checkmate/ui": ["packages/ui"],
        "@checkmate/hooks": ["packages/hooks"],
        "@checkmate/screens": ["packages/screens"],
        "@checkmate/theme": ["packages/theme"],
        "@checkmate/store": ["packages/store"],
        "@checkmate/api": ["packages/api"],
        "@checkmate/types": ["packages/types"]
      },
      "module": "esnext",
      "target": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "references": [
        { "path": "./packages/types" },
        { "path": "./packages/api" },
        { "path": "./apps/web" }
      ],
    }
  }
  